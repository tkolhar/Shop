        driver.findElement(By.xpath("//a[@href='http://store.demoqa.com/products-page/checkout/']")).click();
        Thread.sleep(1000);
        driver.findElement(By.xpath("//span[.='Continue']")).click();
        Thread.sleep(1000);
        WebElement email = driver.findElement(By.id("wpsc_checkout_form_9"));
